{
    "name": "php-code-minifier/php-code-minifier",
    "description": "PHP Code Minifier is a tool that allows you to minify your PHP code.",
    "type": "library",
    "license": ["MIT"],
    "keywords": [
        "php",
        "minifier",
        "minify",
        "code",
        "minification",
        "php-code-minifier"
    ],
    "autoload": {
        "psr-4": {
            "PhpCodeMinifier\\": "src/",
            "PhpCodeMinifier\\Tests\\": "tests/"
        }
    },
    "authors": [
        {
            "name": "Olexandr Mazur",
            "email": "alexandrmazur96@gmail.com"
        }
    ],
    "require": {
        "php": "^8.0",
        "symfony/console": "^6.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.0|^10.0",
        "squizlabs/php_codesniffer": "^3.7",
        "slevomat/coding-standard": "^8.8",
        "vimeo/psalm": "^5.8",
        "psalm/plugin-phpunit": "^0.18.4 || ^0.19.0",
        "php-parallel-lint/php-parallel-lint": "^1.3"
    },
    "bin": ["bin/php-code-minifier"],
    "config": {
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    }
}
